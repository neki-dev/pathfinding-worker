{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["jest", "node"],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/__mocks__/**"
  ]
}